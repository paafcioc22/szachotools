    <Grid>

        <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="#F5FFFF" Padding="0,50,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Dla etykiety -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Dla ikony wylogowania -->
                </Grid.ColumnDefinitions>

                <Label Text="{Binding UserName}" x:Name="lbl_user" Margin="30,0,0,0"
                       HorizontalOptions="Center" FontSize="16" HorizontalTextAlignment="Center"
                       FontAttributes="Bold" TextColor="Black" Grid.Column="0"/>
                <ImageButton Source="ic_action_user_1828426.png" Grid.Column="1" 
                       HorizontalOptions="End" VerticalOptions="Center" x:Name="logoutbutton"
                       WidthRequest="30" HeightRequest="30" Margin="0,0,20,0" Clicked="logoutbutton_Clicked"
                       IsEnabled="{Binding IsButtonsEnabled}"/>

            </Grid>
            <Grid  Padding="20" ColumnSpacing="25" RowSpacing="25" VerticalOptions="FillAndExpand"  >

                <Button Text="Przyjmij MM"  IsEnabled="{Binding IsButtonsEnabled}" Grid.Column="0" Grid.Row="0"  Grid.RowSpan="2"
                    BackgroundColor="DarkCyan" 
                    FontSize="Medium" 
                    FontAttributes="Bold" 
                    TextColor="Bisque"   
                    CornerRadius="10" 
                    BorderColor="mediumturquoise"   
                    BorderWidth="3"
                    ImageSource="skaner100"
                    Clicked="BtnListaMMp_Clicked"   
                    ContentLayout="Top,20" x:Name="btn_przyjmijMM"                    
                    />

                <Button Text="Utwórz MM" Grid.Column="1" Grid.Row="0" 
                    BackgroundColor="DarkCyan" 
                    FontSize="Medium" 
                    TextColor="Bisque"   
                    IsEnabled="{Binding IsButtonsEnabled}"
                    CornerRadius="10" 
                    BorderColor="mediumturquoise" 
                    BorderWidth="3"
                    ImageSource="dodaj100" 
                    ContentLayout="Top,40" 
                    Clicked="BtnCreateMm_Clicked" x:Name="btn_CreateMM"
                    />

                <Button Text="Utworz Paczke" Grid.Column="1" Grid.Row="1"  
                    BackgroundColor="DarkCyan" 
                    FontSize="10" 
                    
                    TextColor="Bisque"   
                    CornerRadius="10" 
                    BorderColor="mediumturquoise"   
                    BorderWidth="3"
                    ImageSource="icons8_fedex.9"
                    Clicked="BtnCreatePaczka_Clicked"
                    ContentLayout="Top,20"  
                    
                    />

                <Button Text="Weryfikator Cen" Grid.Column="0" Grid.Row="2"   
                    BackgroundColor="DarkCyan" 
                    FontSize="14" 
                    TextColor="Bisque"  
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    BorderColor="mediumturquoise"
                    BorderWidth="3"
                    ImageSource="barcode150.png"
                    ContentLayout="Top,0"
                    Clicked="SkanTwr_Clicked"
                    x:Name="btn_weryfikator" 
                />

                <Button Text="Foto Relacja RKS" Grid.Column="0" Grid.Row="3"   
                    BackgroundColor="DarkCyan" 
                    FontSize="14" 
                    TextColor="Bisque"  
                    FontAttributes="Bold" 
                    CornerRadius="10" 
                    BorderColor="mediumturquoise"
                    BorderWidth="3"                    
                    ContentLayout="Top,0"
                    Clicked="btn_zdjecia_Clicked" 
                    x:Name="btn_zdjecia" 
                />

                <Button Text="Lista Akcji" Grid.Column="1" Grid.Row="2"  Grid.RowSpan="2" IsEnabled="{Binding IsButtonsEnabled}"
                    BackgroundColor="DarkCyan" 
                    FontSize="Medium" 
                    TextColor="Bisque"  
                    CornerRadius="10" 
                    BorderColor="mediumturquoise" 
                    BorderWidth="3" 
                    FontAttributes="Bold" 
                    ImageSource="znizka100"
                    ContentLayout="Top,1"
                    x:Name="btn_ListaAkcji"
                    Clicked="Btn_ListAkcje_Clicked"
                    />

            </Grid>


            <StackLayout HorizontalOptions="FillAndExpand" HeightRequest="50" Padding="25" Orientation="Horizontal">
                <ImageButton Source="help100.9"  
                         Clicked="Help_Clicked"  
                         BackgroundColor="#F5FFFF"/>

                <Button Text="Logowanie" FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="Center" 
                    HeightRequest="65"
                    BorderWidth="3"
                    Clicked="Btn_Login_Clicked" 
                    BorderColor="DarkCyan"
                    x:Name="btn_login" 
                    BackgroundColor="#54c4b4" 
                    CornerRadius="15" Margin="15,0,15,0" TextColor="AntiqueWhite"/>

                <ImageButton Source="settings_3.9"  
                         Clicked="ImageButton_Clicked" 
                         
                         BackgroundColor="#F5FFFF"/>


            </StackLayout>
            <ContentView x:Name="popupLoginView"
                     BackgroundColor="#C0808080"
                     Padding="10, 0"
                     IsVisible="false"
                     AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                     AbsoluteLayout.LayoutFlags="All">
                <StackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
                    <StackLayout Orientation="Vertical"
                             HeightRequest="200"
                             WidthRequest="300"
                             BackgroundColor="White">
                        <Entry Margin="20,20,20,10"
                           Placeholder="Enter Username"></Entry>
                        <Entry Margin="20,0,20,0"
                           IsPassword="True"
                           Placeholder="Enter Password"></Entry>
                        <Button Margin="20,0,20,0"
                            Text="Login"></Button>
                    </StackLayout>
                </StackLayout>
            </ContentView>
        </StackLayout>
        <ActivityIndicator x:Name="WaitIco" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" 
                           HorizontalOptions="CenterAndExpand" 
                           VerticalOptions="CenterAndExpand"/>
    </Grid>

</ContentPage>